#include<bits/stdc++.h>
using namespace std;
int main()
{
    int i, j;
    
    int n;
    
    cin>>n;
    for( i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
            if(j==1) 
            cout<<i<< " ";
            else if(j==n)
            cout<<n-i<<" ";
            else if(i==1 || i==n)
            cout<<"+";
            else if(i==(n/2)+1&& j==(n/2)+1)
            cout<<"*";
            else 
            cout<<" ";
        }
        cout<< "\n" ;
    }
    
}
